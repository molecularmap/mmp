    const molecularDatabase = [
      // Drugs
      { name: 'Aspirin', formula: 'C9H8O4', color: '#f87171', size: 2.5 },
      { name: 'Metformin', formula: 'C4H11N5', color: '#f87171', size: 2.5 },
      { name: 'Ibuprofen', formula: 'C13H18O2', color: '#f87171', size: 2 },
      { name: 'Lisinopril', formula: 'C21H31N3O5', color: '#f87171', size: 1.5 },
      { name: 'Atorvastatin', formula: 'C33H35FN2O5', color: '#f87171', size: 2 },
      { name: 'Levothyroxine', formula: 'C15H11I4NO4', color: '#f87171', size: 1.5 },
      { name: 'Amlodipine', formula: 'C20H25ClN2O5', color: '#f87171', size: 1.8 },
      { name: 'Omeprazole', formula: 'C17H19N3O3S', color: '#f87171', size: 1.6 },
      
      // Nutrients
      { name: 'Vitamin C', formula: 'C6H8O6', color: '#4ade80', size: 2.2 },
      { name: 'Vitamin D3', formula: 'C27H44O', color: '#4ade80', size: 2 },
      { name: 'Vitamin B12', formula: 'C63H88CoN14O14P', color: '#4ade80', size: 1.8 },
      { name: 'Omega-3 DHA', formula: 'C22H32O2', color: '#4ade80', size: 2 },
      { name: 'Folic Acid', formula: 'C19H19N7O6', color: '#4ade80', size: 1.7 },
      { name: 'Vitamin E', formula: 'C29H50O2', color: '#4ade80', size: 1.9 },
      { name: 'Biotin', formula: 'C10H16N2O3S', color: '#4ade80', size: 1.5 },
      { name: 'Niacin', formula: 'C6H5NO2', color: '#4ade80', size: 1.4 },
      
      // Metabolites
      { name: 'Glucose', formula: 'C6H12O6', color: '#facc15', size: 2.5 },
      { name: 'Dopamine', formula: 'C8H11NO2', color: '#facc15', size: 2.2 },
      { name: 'Serotonin', formula: 'C10H12N2O', color: '#facc15', size: 2 },
      { name: 'ATP', formula: 'C10H16N5O13P3', color: '#facc15', size: 2.3 },
      { name: 'Creatine', formula: 'C4H9N3O2', color: '#facc15', size: 1.6 },
      { name: 'L-Glutamine', formula: 'C5H10N2O3', color: '#facc15', size: 1.5 },
      { name: 'Acetylcholine', formula: 'C7H16NO2', color: '#facc15', size: 1.8 },
      { name: 'GABA', formula: 'C4H9NO2', color: '#facc15', size: 1.7 },
      
      // Natural Compounds
      { name: 'Resveratrol', formula: 'C14H12O3', color: '#38bdf8', size: 2.1 },
      { name: 'Curcumin', formula: 'C21H20O6', color: '#38bdf8', size: 2.3 },
      { name: 'Quercetin', formula: 'C15H10O7', color: '#38bdf8', size: 2 },
      { name: 'EGCG', formula: 'C22H18O11', color: '#38bdf8', size: 1.9 },
      { name: 'Caffeine', formula: 'C8H10N4O2', color: '#38bdf8', size: 2.2 },
      { name: 'Gingerol', formula: 'C17H26O4', color: '#38bdf8', size: 1.6 },
      { name: 'Lycopene', formula: 'C40H56', color: '#38bdf8', size: 1.8 },
      { name: 'Beta-Carotene', formula: 'C40H56', color: '#38bdf8', size: 1.7 },
    ];

    // Canvas setup
    const canvas = document.getElementById('galaxy-canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    // Create MANY molecular particles (200+) for galaxy effect
    const molecules = [];
    const moleculeCount = 200;

    for (let i = 0; i < moleculeCount; i++) {
      const molData = molecularDatabase[i % molecularDatabase.length];
      const size = molData.size * (0.8 + Math.random() * 0.4); // Vary sizes
      
      molecules.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        vx: (Math.random() - 0.5) * 0.3,
        vy: (Math.random() - 0.5) * 0.3,
        radius: size,
        data: molData,
        index: i,
        twinkle: Math.random() * Math.PI * 2,
        twinkleSpeed: 0.02 + Math.random() * 0.03,
        connections: []
      });
    }

    // Create connection network (only nearby molecules)
    molecules.forEach((mol, i) => {
      const maxConnections = 3;
      let connectionCount = 0;
      
      molecules.forEach((other, j) => {
        if (i !== j && connectionCount < maxConnections) {
          const dx = mol.x - other.x;
          const dy = mol.y - other.y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          
          if (distance < 200) {
            mol.connections.push({ target: j, distance });
            connectionCount++;
          }
        }
      });
    });

    // Mouse tracking
    let mouseX = -1000;
    let mouseY = -1000;
    let hoveredMolecule = null;

    canvas.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
      
      hoveredMolecule = null;
      molecules.forEach(mol => {
        const dx = mouseX - mol.x;
        const dy = mouseY - mol.y;
        const distance = Math.sqrt(dx * dx + dy * dy);
        
        if (distance < mol.radius + 8) {
          hoveredMolecule = mol;
        }
      });

      const tooltip = document.getElementById('tooltip');
      if (hoveredMolecule) {
        tooltip.querySelector('.tooltip-name').textContent = hoveredMolecule.data.name;
        tooltip.querySelector('.tooltip-formula').textContent = hoveredMolecule.data.formula;
        tooltip.style.left = mouseX + 20 + 'px';
        tooltip.style.top = mouseY + 20 + 'px';
        tooltip.classList.add('show');
        canvas.style.cursor = 'pointer';
      } else {
        tooltip.classList.remove('show');
        canvas.style.cursor = 'default';
      }
    });

    canvas.addEventListener('click', () => {
      if (hoveredMolecule) {
        window.location.href = `/molecule/${hoveredMolecule.data.name.toLowerCase()}`;
      }
    });

    canvas.addEventListener('mouseleave', () => {
      mouseX = -1000;
      mouseY = -1000;
      document.getElementById('tooltip').classList.remove('show');
    });

    // Animation
    function animate() {
      // Dark fade for trail effect
      ctx.fillStyle = 'rgba(0, 0, 8, 0.15)';
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Draw semi-transparent connections FIRST (subtle, behind molecules)
      molecules.forEach(mol => {
        mol.connections.forEach(conn => {
          const target = molecules[conn.target];
          if (!target) return;

          const dx = target.x - mol.x;
          const dy = target.y - mol.y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          // Only draw if reasonably close
          if (distance < 250) {
            // Very subtle gradient line
            const gradient = ctx.createLinearGradient(mol.x, mol.y, target.x, target.y);
            gradient.addColorStop(0, mol.data.color + '08'); // Very transparent
            gradient.addColorStop(0.5, mol.data.color + '15'); // Slightly more visible in middle
            gradient.addColorStop(1, target.data.color + '08');
            
            ctx.strokeStyle = gradient;
            ctx.lineWidth = 0.5;
            ctx.globalAlpha = 0.3 * (1 - distance / 250); // Fade with distance
            
            ctx.beginPath();
            ctx.moveTo(mol.x, mol.y);
            ctx.lineTo(target.x, target.y);
            ctx.stroke();

            // Subtle pulsing effect
            const pulse = Math.sin(Date.now() / 2000 + conn.distance) * 0.2 + 0.3;
            ctx.globalAlpha = pulse * (1 - distance / 250);
            ctx.lineWidth = 0.8;
            ctx.stroke();
            
            ctx.globalAlpha = 1;
          }
        });
      });

      // Update and draw molecules
      molecules.forEach((mol, i) => {
        // Gentle drift movement
        mol.x += mol.vx;
        mol.y += mol.vy;

        // Soft bounce at edges
        if (mol.x < 20 || mol.x > canvas.width - 20) mol.vx *= -0.95;
        if (mol.y < 20 || mol.y > canvas.height - 20) mol.vy *= -0.95;

        // Keep in bounds
        mol.x = Math.max(20, Math.min(canvas.width - 20, mol.x));
        mol.y = Math.max(20, Math.min(canvas.height - 20, mol.y));

        // Subtle mouse repulsion (molecules drift away from cursor)
        const dx = mol.x - mouseX;
        const dy = mol.y - mouseY;
        const distToMouse = Math.sqrt(dx * dx + dy * dy);
        
        if (distToMouse < 150 && distToMouse > 0) {
          const force = (150 - distToMouse) / 150 * 0.8;
          mol.vx += (dx / distToMouse) * force * 0.1;
          mol.vy += (dy / distToMouse) * force * 0.1;
        }

        // Limit velocity
        const speed = Math.sqrt(mol.vx * mol.vx + mol.vy * mol.vy);
        if (speed > 1) {
          mol.vx = (mol.vx / speed) * 1;
          mol.vy = (mol.vy / speed) * 1;
        }

        // Update twinkle
        mol.twinkle += mol.twinkleSpeed;

        // Large outer glow (cosmic halo)
        const twinkleIntensity = Math.sin(mol.twinkle) * 0.3 + 0.7;
        const glowRadius = mol.radius * 4;
        
        const outerGlow = ctx.createRadialGradient(mol.x, mol.y, 0, mol.x, mol.y, glowRadius);
        outerGlow.addColorStop(0, mol.data.color + Math.floor(twinkleIntensity * 40).toString(16).padStart(2, '0'));
        outerGlow.addColorStop(0.3, mol.data.color + '18');
        outerGlow.addColorStop(0.7, mol.data.color + '08');
        outerGlow.addColorStop(1, mol.data.color + '00');
        
        ctx.fillStyle = outerGlow;
        ctx.beginPath();
        ctx.arc(mol.x, mol.y, glowRadius, 0, Math.PI * 2);
        ctx.fill();

        // Inner glow (brighter)
        const innerGlow = ctx.createRadialGradient(mol.x, mol.y, 0, mol.x, mol.y, mol.radius * 2);
        innerGlow.addColorStop(0, mol.data.color + 'CC');
        innerGlow.addColorStop(0.5, mol.data.color + '60');
        innerGlow.addColorStop(1, mol.data.color + '00');
        
        ctx.fillStyle = innerGlow;
        ctx.beginPath();
        ctx.arc(mol.x, mol.y, mol.radius * 2, 0, Math.PI * 2);
        ctx.fill();

        // Core star particle
        ctx.fillStyle = mol.data.color;
        ctx.shadowBlur = 15 * twinkleIntensity;
        ctx.shadowColor = mol.data.color;
        ctx.beginPath();
        ctx.arc(mol.x, mol.y, mol.radius, 0, Math.PI * 2);
        ctx.fill();
        ctx.shadowBlur = 0;

        // Bright center point (twinkling star effect)
        ctx.fillStyle = '#ffffff';
        ctx.globalAlpha = twinkleIntensity * 0.9;
        ctx.beginPath();
        ctx.arc(mol.x, mol.y, mol.radius * 0.4, 0, Math.PI * 2);
        ctx.fill();
        ctx.globalAlpha = 1;

        // Star flare lines (cross pattern for larger molecules)
        if (mol.radius > 2 && twinkleIntensity > 0.8) {
          ctx.strokeStyle = '#ffffff';
          ctx.lineWidth = 0.5;
          ctx.globalAlpha = (twinkleIntensity - 0.8) * 2;
          
          const flareLength = mol.radius * 2.5;
          
          // Horizontal
          ctx.beginPath();
          ctx.moveTo(mol.x - flareLength, mol.y);
          ctx.lineTo(mol.x + flareLength, mol.y);
          ctx.stroke();
          
          // Vertical
          ctx.beginPath();
          ctx.moveTo(mol.x, mol.y - flareLength);
          ctx.lineTo(mol.x, mol.y + flareLength);
          ctx.stroke();
          
          ctx.globalAlpha = 1;
        }

        // Highlight if hovered
        if (mol === hoveredMolecule) {
          // Bright ring
          ctx.strokeStyle = '#ffffff';
          ctx.lineWidth = 2;
          ctx.shadowBlur = 20;
          ctx.shadowColor = '#ffffff';
          ctx.beginPath();
          ctx.arc(mol.x, mol.y, mol.radius + 4, 0, Math.PI * 2);
          ctx.stroke();
          ctx.shadowBlur = 0;
          
          // Molecule name
          ctx.fillStyle = '#ffffff';
          ctx.font = 'bold 14px sans-serif';
          ctx.textAlign = 'center';
          ctx.shadowBlur = 8;
          ctx.shadowColor = '#000000';
          ctx.fillText(mol.data.name, mol.x, mol.y - 18);
          ctx.shadowBlur = 0;

          // Highlight connections
          mol.connections.forEach(conn => {
            const target = molecules[conn.target];
            if (target) {
              ctx.strokeStyle = mol.data.color + 'AA';
              ctx.lineWidth = 2;
              ctx.shadowBlur = 10;
              ctx.shadowColor = mol.data.color;
              ctx.beginPath();
              ctx.moveTo(mol.x, mol.y);
              ctx.lineTo(target.x, target.y);
              ctx.stroke();
              ctx.shadowBlur = 0;
            }
          });
        }
      });

      requestAnimationFrame(animate);
    }

    animate();

    // Modal functions
    function openModal() {
      document.getElementById('modal').classList.add('active');
    }

    function closeModal(event) {
      if (!event || event.target.classList.contains('modal-overlay') || event.target.classList.contains('modal-close')) {
        document.getElementById('modal').classList.remove('active');
      }
    }

    // Navbar scroll effect
    window.addEventListener('scroll', () => {
      document.getElementById('navbar').classList.toggle('scrolled', window.scrollY > 100);
    });

    // Resize handling
    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });

    // Prevent scrolling modal content from closing
    document.querySelector('.modal-content').addEventListener('wheel', (e) => {
      e.stopPropagation();
    });
  </script>

</body>
</html>